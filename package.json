{
  "name": "app",
  "private": "true",
  "dependencies": {
    "sass": "^1.89.2"
  },
  "scripts": {
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:trix --external:@rails/actiontext --external:@hotwired/turbo-rails --external:@hotwired/stimulus-loading --external:controllers/*"
  },
  "devDependencies": {
    "esbuild": "^0.25.8"
  }
}
