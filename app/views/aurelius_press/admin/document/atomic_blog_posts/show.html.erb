<div class="hero-banner small flex justify-center items-center">
  <hgroup class="container">
    <h1>AureliusPress::Admin::Document::AtomicBlogPosts#show</h1>
    <p>View an existing atomic blog post in the AureliusPress application.</p>
  </hgroup>
</div>

<div class="container">

  <h2>Show Atomic Blog Post Details</h2>

  <div class="page-links">
    <%= link_to "Edit", edit_aurelius_press_admin_document_atomic_blog_post_path(@atomic_blog_post) %> |
    <%= link_to "Delete", aurelius_press_admin_document_atomic_blog_post_path(@atomic_blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> |
    <%= link_to "Back to All Posts", aurelius_press_admin_document_atomic_blog_posts_path %>
  </div>

  <h2><%= @atomic_blog_post.title %></h2>
  <% if @atomic_blog_post.subtitle.present? %>
    <h3><%= @atomic_blog_post.subtitle %></h3>
  <% end %>

  <p>
    <strong>Author:</strong>
    <%= @atomic_blog_post.user.full_name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @atomic_blog_post.description %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @atomic_blog_post.status.humanize %>
  </p>

  <p>
    <strong>Visibility:</strong>
    <%= @atomic_blog_post.visibility.humanize %>
  </p>

  <p>
    <strong>Published At:</strong>
    <%= @atomic_blog_post.published_at %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= @atomic_blog_post.tags.join(", ") %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @atomic_blog_post.category.name if @atomic_blog_post.category %>
  </p>

  <p>
    <strong>Comments Enabled:</strong>
    <%= @atomic_blog_post.comments_enabled ? "Yes" : "No" %>
  </p>

  <% if @atomic_blog_post.image_file.attached? %>
    <p>
      <strong>Featured Image:</strong><br>
      <%= image_tag @atomic_blog_post.image_file.variant(resize_to_limit: [600, 400]) %>
    </p>
  <% end %>

  <p>
    <strong>Excerpt:</strong>
    <%= @atomic_blog_post.content %>
  </p>

  <div class="comment-section">
    <h3>Comments</h3>
    <% @atomic_blog_post.comments.each do |comment| %>
      <div class="comment">
        <p><strong><%= comment.user&.full_name || 'Unknown User' %>:</strong> <%= comment.content.body.to_plain_text %></p>
      </div>
    <% end %>
  </div>

  <div class="note-section">
    <h3>Notes</h3>
    <% @atomic_blog_post.notes.each do |note| %>
      <div class="note">
        <p><strong><%= note.user&.full_name || 'Unknown User' %>:</strong> <%= note.content.body.to_plain_text %></p>
      </div>
    <% end %>
  </div>
</div>
