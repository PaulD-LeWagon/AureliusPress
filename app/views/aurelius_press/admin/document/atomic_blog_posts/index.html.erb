<h1>AureliusPress::Admin::Document::AtomicBlogPosts#index</h1>

<h2>View All Atomic Blog Posts</h2>

<%= link_to "New Atomic Blog Post", new_aurelius_press_admin_document_atomic_blog_post_path %>

<% if @atomic_blog_posts.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @atomic_blog_posts.each do |atomic_blog_post| %>
        <tr></tr>
          <td><%= atomic_blog_post.id %></td>
          <td><%= atomic_blog_post.title %></td>
          <td><%= atomic_blog_post.description %></td>
          <td>
            <%= link_to "Show", aurelius_press_admin_document_atomic_blog_post_path(atomic_blog_post) %> |
            <%= link_to "Edit", edit_aurelius_press_admin_document_atomic_blog_post_path(atomic_blog_post) %> |
            <%= link_to "Delete", aurelius_press_admin_document_atomic_blog_post_path(atomic_blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No atomic blog posts found.</p>
<% end %>
