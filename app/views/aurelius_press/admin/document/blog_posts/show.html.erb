<div class="hero-banner small flex justify-center items-center">
  <hgroup class="container">
    <h1>AureliusPress::Admin::Document::BlogPosts#show</h1>
    <p>View an existing blog post in the AureliusPress application.</p>
  </hgroup>
</div>

<div class="container">

  <h2>Show Blog Post Details</h2>

  <div class="page-links">
    <%= link_to "Edit", edit_aurelius_press_admin_document_blog_post_path(@blog_post) %> |
    <%= link_to "Delete", aurelius_press_admin_document_blog_post_path(@blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> |
    <%= link_to "Back to Pages", aurelius_press_admin_document_blog_posts_path %>
  </div>


  <h2><%= @blog_post.title %></h2>
  <% if @blog_post.subtitle.present? %>
    <h3><%= @blog_post.subtitle %></h3>
  <% end %>

  <p>
    <strong>Author:</strong>
    <%= @blog_post.user.full_name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @blog_post.description %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @blog_post.status.humanize %>
  </p>

  <p>
    <strong>Visibility:</strong>
    <%= @blog_post.visibility.humanize %>
  </p>

  <p>
    <strong>Published At:</strong>
    <%= @blog_post.published_at %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= @blog_post.tags.join(", ") %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @blog_post.category.name if @blog_post.category %>
  </p>

  <div class="content-blocks">
    <h3>Content Blocks</h3>
    <% @blog_post.content_blocks.order(:position).each do |content_block| %>
      <%= render content_block %>
    <% end %>
  </div>

</div>
