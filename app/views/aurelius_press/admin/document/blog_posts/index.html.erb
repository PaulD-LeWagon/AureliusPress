<h1>AureliusPress::Admin::Document::BlogPosts#index</h1>

<%= link_to "New Blog Post", new_aurelius_press_admin_document_blog_post_path %>
<% if @blog_posts.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr></tr>
          <td><%= blog_post.id %></td>
          <td><%= blog_post.title %></td>
          <td><%= blog_post.description %></td>
          <td>
            <%= link_to "Show", aurelius_press_admin_document_blog_post_path(blog_post) %> |
            <%= link_to "Edit", edit_aurelius_press_admin_document_blog_post_path(blog_post) %> |
            <%= link_to "Delete", aurelius_press_admin_document_blog_post_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No blog posts found.</p>
<% end %>
