<h1>AureliusPress::Admin::Document::Pages<b><i>#index</i></b></h1>
<p>Find me in app/views/aurelius_press/admin/document/pages/index.html.erb</p>

<%= link_to "New Page", new_aurelius_press_admin_document_page_path %>

<h2>View All Pages</h2>

<% if @pages.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr></tr>
          <td><%= page.id %></td>
          <td><%= page.title %></td>
          <td><%= page.description %></td>
          <td>
            <%= link_to "Show", aurelius_press_admin_document_page_path(page) %> |
            <%= link_to "Edit", edit_aurelius_press_admin_document_page_path(page) %> |
            <%= link_to "Delete", aurelius_press_admin_document_page_path(page), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No pages found.</p>
<% end %>
