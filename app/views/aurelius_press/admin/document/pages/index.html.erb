<div class="hero-banner small flex justify-center items-center">
  <hgroup class="container">
    <h1>AureliusPress::Admin::Document::Pages#index</h1>
    <p>View all pages in the AureliusPress application.</p>
  </hgroup>
</div>

<div class="container">

  <h2>View All Pages</h2>

  <div class="page-links">
    <%= link_to "Add New Page", new_aurelius_press_admin_document_page_path %>
  </div>

  <% if @pages.any? %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr></tr>
            <td><%= page.id %></td>
            <td><%= page.title %></td>
            <td><%= page.description %></td>
            <td class="no-wrap">
              <%= link_to "Show", aurelius_press_admin_document_page_path(page) %>
              &nbsp;
              <%= link_to "Edit", edit_aurelius_press_admin_document_page_path(page) %>
              &nbsp;
              <%= link_to "Delete", aurelius_press_admin_document_page_path(page), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No pages found.</p>
  <% end %>
</div>
