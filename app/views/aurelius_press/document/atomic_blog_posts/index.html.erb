<h1>AureliusPress::Document::AtomicBlogPosts#index</h1>

<%= link_to "New Atomic Blog Post", new_aurelius_press_atomic_blog_post_path %>

<h2>View Atomic Blog Posts</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @atomic_blog_posts.each do |atomic_blog_post| %>
      <tr>
        <td><%= atomic_blog_post.id %></td>
        <td>
          <%= atomic_blog_post.title %><br>
          <%= atomic_blog_post.subtitle if atomic_blog_post.subtitle.present? %>
        </td>
        <td><%= atomic_blog_post.description %></td>
        <td><%= atomic_blog_post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= atomic_blog_post.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to "Show", aurelius_press_atomic_blog_post_path(atomic_blog_post) %>
          <%= link_to "Edit", edit_aurelius_press_atomic_blog_post_path(atomic_blog_post) %>
          <%= link_to "Delete", aurelius_press_atomic_blog_post_path(atomic_blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
