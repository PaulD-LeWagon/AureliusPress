<div class="container">

  <h1>AureliusPress::Document::BlogPosts#index</h1>

  <h2>All Posts</h2>

  <div class="page-links">
    <%= link_to "Add New Post", new_aurelius_press_blog_post_path %>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr>
          <td><%= blog_post.id %></td>
          <td>
            <%= blog_post.title %><br>
            <%= blog_post.subtitle if blog_post.subtitle.present? %>
          </td>
          <td><%= blog_post.description %></td>
          <td><%= blog_post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= blog_post.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "Show", aurelius_press_blog_post_path(blog_post) %>
            <%= link_to "Edit", edit_aurelius_press_blog_post_path(blog_post) %>
            <%= link_to "Delete", aurelius_press_blog_post_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
