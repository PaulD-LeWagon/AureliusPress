<div class="container">
  <nav>
    <ul>
      <% if current_user %>

      <li>
        <strong title="<%= current_user.role.titleize %>">
          <%= current_user.full_name %>
        </strong>
      </li>

      <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" } %></li>

      <% else %>
        <li><%= link_to "Login", user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <details class="dropdown">
          <summary>
            Admin
          </summary>
          <ul>
            <li><%= link_to "Users", aurelius_press_admin_users_path %></li>
            <li><%= link_to "Pages", aurelius_press_admin_document_pages_path %></li>
            <li><%= link_to "Posts", aurelius_press_admin_document_blog_posts_path %></li>
            <li><%= link_to "Atomic Posts", aurelius_press_admin_document_atomic_blog_posts_path %></li>
          </ul>
        </details>
      </li>
    </ul>
  </nav>
</div>
