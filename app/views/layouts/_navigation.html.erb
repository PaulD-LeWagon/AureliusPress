<div class="container">
  <nav>
    <ul>
      <% if current_user %>

      <li>
        <strong title="<%= current_user.role.titleize %>">
          <%= current_user.full_name %>
        </strong>
      </li>

      <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" } %></li>

      <% else %>
        <li><%= link_to "Login", user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <details class="dropdown">
          <summary>
            Menu
          </summary>
          <ul>
            <% if current_user %>
            <li><%= link_to "Profile", aurelius_press_user_path(current_user) %></li>
            <% end %>
            <hr>
            <li><%= link_to "Pages", aurelius_press_pages_path %></li>
            <li><%= link_to "Posts", aurelius_press_blog_posts_path %></li>
            <li><%= link_to "Atomic Posts", aurelius_press_atomic_blog_posts_path %></li>
            <hr>
            <li><%= link_to "Authors", aurelius_press_catalogue_authors_path %></li>
            <li><%= link_to "Quotes", aurelius_press_catalogue_quotes_path %></li>
            <li><%= link_to "Sources", aurelius_press_catalogue_sources_path %></li>
          </ul>
        </details>
      </li>
      <li>
        <details class="dropdown">
          <summary>
            Admin
          </summary>
          <ul>
            <li><%= link_to "Users", aurelius_press_admin_users_path %></li>
            <hr>
            <li><%= link_to "Pages", aurelius_press_admin_document_pages_path %></li>
            <li><%= link_to "Posts", aurelius_press_admin_document_blog_posts_path %></li>
            <li><%= link_to "Atomic Posts", aurelius_press_admin_document_atomic_blog_posts_path %></li>
            <hr>
            <li><%= link_to "Categories", aurelius_press_admin_taxonomy_categories_path %></li>
            <li><%= link_to "Tags", aurelius_press_admin_taxonomy_tags_path %></li>
            <hr>
            <li><%= link_to "Authors", aurelius_press_admin_catalogue_authors_path %></li>
            <li><%= link_to "Quotes", aurelius_press_admin_catalogue_quotes_path %></li>
            <li><%= link_to "Sources", aurelius_press_admin_catalogue_sources_path %></li>
          </ul>
        </details>
      </li>
    </ul>
  </nav>
</div>
